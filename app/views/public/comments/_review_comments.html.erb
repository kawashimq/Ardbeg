<p>コメント件数：<%= review.comments.count %></p>
<% review.comments.each do |comment| %>
  <p><%= image_tag comment.customer.get_profile_image(80,80) %></p>
  <%= comment.customer.name %>
  <%= comment.created_at.strftime('%Y/%m/%d') %>
  <%= comment.detail %>
  <% if comment.customer_id == current_customer.id %>
    <%= link_to "削除", public_review_comment_path(comment.review, comment), method: :delete, remote: true, data: {confirm: "本当に削除しますか？"} %>
  <% end %>
<% end %>