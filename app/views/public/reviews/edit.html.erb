  <%= form_with model: @review, url: public_review_path(@review.id), method: :patch do |f| %>
    <div class="text-center">
      <label class="mt-3 mb-2">商品画像</label>
        <div>
          <%= f.file_field :image, placeholder:"画像", accept: "image/*" %>
        </div>
      <label class="mt-2 mb-2">商品名</label>
        <div>
          <%= f.text_field :item %>
        </div>
        <label class="mt-2 mb-2">口コミ</label>
        <div>
          <%= f.text_area :content %>
        </div>
        <label class="mt-2 mb-2">原産地</label>
        <div>
          <%= f.select :production_area_id, options_from_collection_for_select(ProductionArea.all, :id, :genre_name), {} %>
        </div>
      <div><%= f.submit '変更を保存', class:'btn btn-outline-success px-4 mt-4 w-25' %></div>
      <div><%= link_to "レビューを削除", public_review_path(@review.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:'btn btn-outline-danger mt-2 w-25' %></div>
    </div>
  <% end %>