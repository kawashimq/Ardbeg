<body>
  <h5 class="d-inline-block font-weight-bold mb-5 ml-5 mt-4 px-3" style="background-color: ghostwhite">原産地編集</h5>
    <div class="container rw-80 mx-auto">
  <%= form_with model: @review, url: public_review_path(@review.id), method: :patch do |f| %>

  <div>
    <label>商品画像</label>
      <div>
        <%= f.file_field :image, placeholder:"画像", accept: "image/*" %>
      </div>
      
    <label>商品名</label>
      <div>
        <%= f.text_field :item %>
      </div>
      
      <label>口コミ</label>
      <div>
        <%= f.text_area :content %>
      </div>
      
      <label>原産地</label>
      <div>
        <%= f.select :production_area_id, options_from_collection_for_select(ProductionArea.all, :id, :genre_name), {} %>
      </div>
      
  <div class="actions col-md-3"><%= f.submit '変更を保存', class:'btn btn-sm px-4 w-50' %></div>
<% end %>
  </div>
</body>